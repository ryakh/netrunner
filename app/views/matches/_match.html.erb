<div class="row">
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-6">
        <h5>
          <%= match.first_player.fullname %>

          <span class="label label-primary">
            <%= match.first_player_league_points %>
          </span>
        </h5>
      </div>

      <div class="col-md-6">
        <h5>
          <%= match.second_player.fullname %>

          <span class="label label-primary">
            <%= match.second_player_league_points %>
          </span>
        </h5>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-9">
            <%= match.first_player_corporation.name %>
          </div>

          <div class="col-md-3">
            <%= match.first_player_corporation_points %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-9">
            <%= match.first_player_runner.name %>
          </div>

          <div class="col-md-3">
            <%= match.first_player_runner_points %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="row">
          <div class="col-md-9">
            <%= match.second_player_runner.name %>
          </div>

          <div class="col-md-3">
            <%= match.second_player_runner_points %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-9">
            <%= match.second_player_corporation.name %>
          </div>

          <div class="col-md-3">
            <%= match.second_player_corporation_points %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-2">
    <h5>
      <%= match.played_on.strftime("%d.%m.%Y") %>
    </h5>

    <div class="btn-group">
      <%= link_to edit_match_path(match.id), class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-pencil"></span>
    <% end %>

      <a class="btn btn-danger btn-sm" href="">
        <span class="glyphicon glyphicon-trash"></span>
      </a>
    </div>
  </div>
</div>

<hr>
