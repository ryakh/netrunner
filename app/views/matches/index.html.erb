<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Played on</th>
      <th>First player</th>
      <th>Second player</th>
      <th>First player corporation</th>
      <th>First player runner</th>
      <th>Second player corporation</th>
      <th>Second player runner</th>
      <th>First player corporation points</th>
      <th>First player runner points</th>
      <th>Second player corporation points</th>
      <th>Second player runner points</th>
      <th>First player league points</th>
      <th>Second player league points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.played_on %></td>
        <td><%= match.first_player %></td>
        <td><%= match.second_player %></td>
        <td><%= match.first_player_corporation %></td>
        <td><%= match.first_player_runner %></td>
        <td><%= match.second_player_corporation %></td>
        <td><%= match.second_player_runner %></td>
        <td><%= match.first_player_corporation_points %></td>
        <td><%= match.first_player_runner_points %></td>
        <td><%= match.second_player_corporation_points %></td>
        <td><%= match.second_player_runner_points %></td>
        <td><%= match.first_player_league_points %></td>
        <td><%= match.second_player_league_points %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
