<div class="row">
  <div class="col-md-12">
    <h1>
      <%= @event.started_at.strftime("%U").to_i.ordinalize %> week

      <small>
        <%= @event.started_at.strftime("%d %b %Y") %> &ndash;
        <%= @event.finished_at.strftime("%d %b %Y") %>
      </small>
    </h1>

    <div class="subnav">
      <hr>

      <ul>
        <li>
          <%= link_to "← Back to season", season_path(@event.season) %>
        </li>

        <li>|</li>

        <li>
          <%= link_to "Calculate event",
            calculate_event_path(@event),
            method: :put %>
        </li>
      </ul>

      <hr>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="nav nav-tabs">
      <li class="active">
        <%= link_to "Overview", event_path(@event) %>
      </li>

      <li>
        <%= link_to "Standings", standings_event_path(@event) %>
      </li>

      <li>
        <%= link_to "Charts", charts_event_path(@event) %>
      </li>
    </ul>
  </div>
</div>
